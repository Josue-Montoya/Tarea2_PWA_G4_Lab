@model RoomModel

@{
    ViewData["Title"] = "Editar Habitación";
}

<h1 class="text-center">Editar Habitación</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="EditRoom" onsubmit="return confirmAction()">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="ID" class="form-label">ID</label>
                    <input asp-for="ID" type="text" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="roomNumber" class="form-label">Número de Habitación</label>
                    <input asp-for="roomNumber" type="text" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label asp-for="roomType" class="control-label">Tipo de Habitacion</label>
                    <select asp-for="roomType" class="form-select">
                        <option value="">Seleccione un tipo de habitación</option>
                        <option value="Individual">Individual</option>
                        <option value="Doble">Doble</option>
                        <option value="Suite">Suite</option>
                        <option value="Premium">Premium</option>
                    </select>
                    <span asp-validation-for="roomType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="roomPrice" class="form-label">Precio</label>
                    <input asp-for="roomPrice" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="HotelId" class="form-label">Hotel</label>
                    <select asp-for="HotelId" class="form-select" asp-items="@ViewBag.Hotels">
                        <option value="">Seleccione un hotel</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a asp-action="ViewRoom" class="btn btn-secondary">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de modificar esta Habitacion?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("ViewRoom", "Room")';
                return false;
            }
        }
    </script>
}