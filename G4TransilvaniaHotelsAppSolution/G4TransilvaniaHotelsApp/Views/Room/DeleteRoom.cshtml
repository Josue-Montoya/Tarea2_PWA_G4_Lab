@model RoomModel

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<h1 class="text-center">Eliminar Habitación</h1>

<h3>¿Está seguro que desea eliminar?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.roomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.roomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.roomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.roomType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.roomPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.roomPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HotelId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HotelId)
        </dd>
    </dl>

    <form asp-action="DeleteRoom">
        <input asp-for="ID" type="hidden" class="form-control" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="ViewRoom" class="btn btn-primary">Regresar al listado</a>
    </form>
</div>

