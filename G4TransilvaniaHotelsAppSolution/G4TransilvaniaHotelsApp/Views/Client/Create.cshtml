@model ClientModel

@{
    ViewData["Title"] = "Nuevo cliente";
}

<h1 class="text-center">Nuevo Cliente</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" onsubmit="return confirmAction()">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="clientName" class="control-label"></label>
                    <input asp-for="clientName" class="form-control" />
                    <span asp-validation-for="clientName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="clientEmail" class="control-label"></label>
                    <input asp-for="clientEmail" class="form-control" />
                    <span asp-validation-for="clientEmail" class="text-danger"></span>
                </div>

                <div class="form-group-0 mb-3">
                    <label asp-for="clientPhone" class="control-label"></label>
                    <input asp-for="clientPhone" class="form-control" />
                    <span asp-validation-for="clientPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />

                    <a asp-action="Index">Regresar al listado de clientes</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de Crear este Cliente?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "Clients")';
                return false;
            }
        }
    </script>
}